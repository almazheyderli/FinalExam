@using Core.Models
@model List<Team>
@{
    int count = 0;
}


  <div class="container">
      <h1> Teams


          <a class="btn btn-primary" asp-action="Create" asp-controller="Team"> Create</a>
      </h1>

      <div class="row">


        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Desc</th>
                    <th scope="col">ImgUrl</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>

                            <div style="width:100px">


                                <img style="width:100%"  src="~/Upload/Service/@item.ImgUrl">

                            </div>
                        </td>

                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Team" asp-route-id="@item.Id">Delete </a>
                            <a class="btn btn-secondary" asp-action="Update" asp-controller="Team" asp-route-id="@item.Id">Update </a>
                        </td>
                    </tr>

                }
               
               
            </tbody>
        </table>

      </div>

  </div>